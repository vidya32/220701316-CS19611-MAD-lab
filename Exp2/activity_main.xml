<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:orientation="vertical">

        <EditText
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:background="#F9D7FF"
            >
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:orientation="vertical">
        <TextView
            android:id="@+id/output"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:background="#A4A7FF"
            >
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1.4"
        android:background="#38FF24">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:orientation="horizontal">
        <Button
            android:text="Clear"
            android:textSize="20dp"
            android:id="@+id/bclr"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"/>
        <Button
            android:text="="
            android:textSize="30dp"
            android:id="@+id/beq"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.2">
        <Button
            android:text="COS"
            android:textSize="25dp"
            android:id="@+id/bcos"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"/>
        <Button
            android:text="SIN"
            android:textSize="25dp"
            android:id="@+id/bsin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"/>
        <Button
            android:text="TAN"
            android:textSize="25dp"
            android:id="@+id/btan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"/>
        <Button
            android:text="SQRT"
            android:textSize="22dp"
            android:id="@+id/bsqrt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.2">
        <Button
            android:text="x^2"
            android:textSize="25dp"
            android:id="@+id/bxp2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"/>
        <Button
            android:text="x^y"
            android:textSize="25dp"
            android:id="@+id/bxpy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"/>
        <Button
            android:text="LOG"
            android:textSize="25dp"
            android:id="@+id/blog"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"/>
        <Button
            android:text="e^x"
            android:textSize="25dp"
            android:id="@+id/bepx"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.2">
        <Button
            android:text="7"
            android:textSize="25dp"
            android:id="@+id/b7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"/>
        <Button
            android:text="8"
            android:textSize="25dp"
            android:id="@+id/b8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"/>
        <Button
            android:text="9"
            android:textSize="25dp"
            android:id="@+id/b9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"/>
        <Button
            android:text="/"
            android:textSize="25dp"
            android:id="@+id/bdiv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.2">
        <Button
            android:text="4"
            android:textSize="25dp"
            android:id="@+id/b4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"/>
        <Button
            android:text="5"
            android:textSize="25dp"
            android:id="@+id/b5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"/>
        <Button
            android:text="6"
            android:textSize="25dp"
            android:id="@+id/b6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"/>
        <Button
            android:text="x"
            android:textSize="25dp"
            android:id="@+id/bmul"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.2">

        <Button
            android:id="@+id/b1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:text="1"
            android:textSize="25dp" />

        <Button
            android:id="@+id/b2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:text="2"
            android:textSize="25dp" />

        <Button
            android:text="3"
            android:textSize="25dp"
            android:id="@+id/b3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"/>
        <Button
            android:text="-"
            android:textSize="25dp"
            android:id="@+id/bsub"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.2">
        <Button
            android:text="."
            android:textSize="25dp"
            android:id="@+id/bdot"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"/>
        <Button
            android:text="0"
            android:textSize="25dp"
            android:id="@+id/b0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"/>
        <Button
            android:text="%"
            android:textSize="25dp"
            android:id="@+id/bmod"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"/>
        <Button
            android:text="+"
            android:textSize="25dp"
            android:id="@+id/badd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"/>

    </LinearLayout>
    </LinearLayout>

</LinearLayout>